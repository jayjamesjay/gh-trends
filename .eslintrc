{
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "parser": "babel-eslint",
  "extends": ["airbnb", "airbnb/hooks", "prettier", "prettier/react"],
  "rules": {
    "no-unused-vars": 1,
    "import/no-extraneous-dependencies": ["error", { "devDependencies": ["src/setupEnzyme.js"] }],
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "warn",
    "react/jsx-props-no-spreading": "off"
  },
  "globals": {
    "window": true,
    "navigator": true,
    "document": true
  }
}
